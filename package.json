{
  "name": "amnesia-api-tool",
  "version": "1.0.0",
  "description": "HTTP Client built with Electron + React + Tailwind + Monaco",
  "main": "dist/main/main.js",
  "author": "TuNombre",
  "license": "ISC",
  "scripts": {
    "dev:main": "webpack --config webpack.main.js --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.js",
    "dev": "concurrently \"npm:dev:main\" \"npm:dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",

    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.js",

    "build": "npm run build:main && npm run build:renderer && electron-builder",

    "build:win": "npm run build:main && npm run build:renderer && electron-builder --win nsis",
    "build:linux": "npm run build:main && npm run build:renderer && electron-builder --linux AppImage",
    "build:mac": "npm run build:main && npm run build:renderer && electron-builder --mac dmg"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/postcss": "^4.1.12",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.541.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "sweetalert2": "^11.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "monaco-editor": "^0.52.2",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "wait-on": "^8.0.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.pablo.amnesia",
    "productName": "Amnesia",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "electron/assets"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "electron/assets/",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "icon": "electron/assets/amnesia.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/amnesia.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Development",
      "icon": "electron/assets"
    }
  }
}
